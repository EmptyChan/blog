<div class="col-12 mt-2 mb-4">
	<center><img class="img-fluid project-img" src="<%- config.root %><%- item.cover_image || theme.default_cover_image %>" alt="<%- item.title || theme.default_post_title || "Untitled" %>"></center>
</div>
<div class="col-12 col-lg-8 offset-lg-2 mt-2 mb-4">
	<div class="post-page text-center">
		<h1><%- item.title || theme.default_post_title || "Untitled" %></h1>
		<hr>
		<span class="date"><%- item.date.format('MMM DD YYYY') || "Untitled" %>
		</span>
	</div>
</div>
<div class="col-12 col-lg-8 offset-lg-2 post-page mt-2">
	<%- item.content %>
</div>

